[core]
    editor = nvim
    autocrlf = false
    safecrlf = true
[push]
    default = matching
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[diff]
    colorMoved = default
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    line-numbers = true
    line-numbers-left-format = ""
    commit-style = bold
    commit-decoration-style = none
    file-style = bold
    file-decoration-style = none
    hunk-header-style = line-number syntax
    hunk-header-file-style = none
    hunk-header-decoration-style = none
    hunk-header-line-number-style = none
[commit]
    gpgsign = true
[init]
    defaultBranch = main
